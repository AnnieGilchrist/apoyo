<div class="container">
  <div class="form-row">
    <div class="col-xs-6">
        <h1 class="form-txt">Change your password</h1>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>

          <div class="form-inputs">
            <%= f.input :password,
                        required: true,
                        autofocus: true,
                        placeholder: "New password",
                        label: false,
                        input_html: { autocomplete: "new-password", class: "first-input" } %>
            <%= f.input :password_confirmation, label: false, placeholder: "Confirm your new password", required: true %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Change password", class: 'big-btn purple-btn form-btn' %>
            <div class="minor-link-div">
              <%= link_to "Log in", new_user_session_path, class: 'form-return-link minor-link' %><br>
              <%= link_to "Sign up", new_user_registration_path, class: 'form-return-link minor-link' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-6">
      <%= image_tag "business_hand.png", width: 400, class: 'form-image' %>
    </div>
  </div>
</div>
