<div class="container">
  <div class="form-row">
    <div class="col-xs-7">
        <h1 class="form-txt">You are...</h1>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.collection_radio_buttons :organisation_type,
                        [['Charity', 'Charity'], ['Business', 'Business']],
                        :first,
                        :last do |b|
                          b.radio_button(class: 'hidden-input') + b.label(class: 'button-label')
                        end
                         %>
            <%= f.input :email,
                        required: true,
                        placeholder: 'Email',
                        label: false,
                        autofocus: true ,
                        input_html: { autocomplete: "email" }%>
            <%= f.input :password,
                        required: true,
                        placeholder: 'Password (at least 6 characters)',
                        label: false,
                        input_html: { autocomplete: "new-password" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        label: false,
                        placeholder: 'Confirm password',
                        input_html: { autocomplete: "new-password" } %>
          </div>

          <div class="form-actions">
            <%= link_to "Log in", new_session_path(resource_name), class: 'form-return-link' %>
            <%= f.button :submit, "Next", class: 'big-btn purple-btn form-btn' %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-5">
        <%= image_tag "business_hand.png", width: 400, class: 'form-image' %>
    </div>
  </div>
</div>

