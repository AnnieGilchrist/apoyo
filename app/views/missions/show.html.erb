<div class="container mission-show">
  <div class="title-box">
    <h1><%= @mission.name %> </h1>
  </div>

  <div class="content">
    <div class="row">
      <div class="col-xs-6 top">
        <p><%= @mission.description %></p>
        <% if @mission.duration.nil? %>
          <p><strong>Duration: </strong>No duration specified</p>
        <% else %>
          <p><strong>Duration: </strong><%= @mission.duration %></p>
        <% end %>
      </div>
      <div class="col-xs-6 top">
        <%= link_to 'Submit Application', "#", class: "button yellow-btn medium-btn rounded"%>
      </div>
    </div>
  </div>
</div>

<div class="whole-page-box">
   <div class="profile-graphics">
    <div class="profile-banner">
      <% if @mission.image.url %>
        <div class="show-banner top" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.1)), url(<%= cl_image_path(@mission.image) %>);">
        </div>
      <% else %>
        <div class="show-banner top" style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0.1)), url(<%= image_path "mission.jpg" %>);">
        </div>
      <% end %>
      <% if @charity.logo.url %>
        <%= cl_image_tag @charity.logo, height: '100', width: '100', class: "profile-image top" %>
      <% else %>
        <%= image_tag "mission.jpg", class: "profile-image top" %>
      <% end %>
    </div>
  </div>
  <div class="container fafa">
    <% if @charity.id == current_user.organisation_id %>
      <%= link_to edit_charity_path(@charity) do %>
        <i class="far fa-edit"></i>
      <% end %>
      <%= link_to mission_path(@mission),
        method: :delete,
        data: { confirm: "Are you sure you want to delete this mission?" } do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    <% else %>
      <%= link_to "Partner", new_mission_partnership_path(@charity), class: "btn btn-home" %>
    <% end %>
  </div>
</div>
