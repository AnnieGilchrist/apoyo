<div class="whole-page-box">
  <div class="show-box show-box-room">
    <div class="image-box">
      <div class="show-image">
        <%= link_to mission_path(@mission) do %>
        <% if @mission.image.nil?  %>
        <%= image_tag 'mission.jpg', class: "image-show" %>
        <% else %>
          <%= cl_image_tag @mission.image, class: "image-show" %>
        <% end %>
        <% end %>
      </div>
    </div>
  <div class="container">
      <div class="title-box">
        <h1><%= @mission.name %> </h1>
      </div>

      <div class="content">
        <p><%= @mission.description %></p>
        <p><strong>Duration: </strong><%= @mission.duration %></p>
      </div>
      <div class="links">
        <% if @charity.id == current_user.organisation_id %>
          <%= link_to edit_charity_path(@charity) do %>
            <i class="far fa-edit"></i>
          <% end %>
          <%= link_to mission_path(@mission),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this mission?" } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% else %>
          <%= link_to "Partner", new_mission_partnership_path(@charity), class: "btn btn-home" %>
        <% end %>
        <%= link_to partnerships_mission_path do %>
          <i class="fas fa-undo-alt"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
