<% following = Follow.following?(current_user.organisation, business) %>

<% if following %>
  <%= link_to 'Following', unfollow_business_path(business), method: :delete, class: 'purple-btn medium-btn rounded nohover', remote: true %>
<% else %>
  <%= link_to '+ Follow', follow_business_path(business), method: :post, class: 'white-btn medium-btn rounded nohover', remote: true %>
<% end %>
