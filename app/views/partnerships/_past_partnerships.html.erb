
<% if @finished_partnerships.count > 0 %>
  <div class="tab-container">
    <div class="row">

      <% @finished_partnerships.each do |partnership| %>
        <div class="col-xs-12">
          <div class="full-length-card">
            <% if partnership.mission.image.url %>
              <%= cl_image_tag partnership.mission.image, class: "mission-image" %>
            <% else %>
              <%= image_tag "mission.jpg", class: "mission-image" %>
            <% end %>
            <div class="card-content">
              <h1 class="card-title"><%= partnership.mission.name %></h1>
              <p class="card-text-grey"><%= partnership.mission.charity.name%></p>
              <p class="card-location"><i class="fas fa-map-marker-alt"></i> Location: <%= partnership.mission.charity.address %></p>
              <p class="card-description"> <%= partnership.mission.description.first(400) + '...'%></p>
            </div>
            <div class="mission-buttons">
              <%= link_to "Mission Info", mission_path(partnership.mission), class: "small-btn white-btn" %>
              <%= link_to "Message History", partnership_path(partnership), class: "small-btn white-btn" %>
            </div>
            <% if partnership.status == 'completed' %>
              <div class="status identifier" style="background-color: #5B00FF !important;">
                   <i class="fas fa-check"></i> <%= partnership.status.capitalize %>
              </div>
            <% else %>
              <div class="status identifier" style="background-color: #C4C4C4 !important;">
                  <%= partnership.status.capitalize %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>

  <div class="following-cards">
    <p class="secondary-txt center"><em>Declined</em> and <em>completed</em> partnerships will show up here.</p><br>
    <p class="secondary-txt center">You do not have any past partnerships right now...</p>
  </div>

<% end %>

