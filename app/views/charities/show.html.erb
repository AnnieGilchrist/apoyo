<div class="whole-page-box">
  <div class="container">
    <div class="show-box show-box-room">
      <div class="image-box">
        <div class="show-image">
          <% if @charity.logo %>
            <%= cl_image_tag @charity.logo, height: '100', width: '100', class: "profile-image" %>
            <% end %>
          <%# end %>
        </div>
      </div>

      <div class="title-box">
        <h1><%= @charity.name %>'s </h1>
      </div>

      <div class="content">
        <p><%= @charity.category %> charity </p>
        <p><strong>Address: </strong> <%= @charity.address %></p>
        <p><%= @charity.description %></p>
        <p><strong>Website: </strong><%= @charity.website %>
      </div>
      <div class="links">
        <% if @charity.id == current_user.organisation_id %>
          <%= link_to edit_charity_path(@charity) do %>
            <i class="far fa-edit"></i>
          <% end %>
          <%= link_to charity_path(@charity),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this charity?" } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% else %>
          <%= link_to "Partner", new_mission_partnership_path(@charity), class: "btn btn-home" %>
        <% end %>
        <%= link_to partnerships_mission_path do %>
          <i class="fas fa-undo-alt"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
